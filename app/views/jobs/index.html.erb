<div class="pull-right">
    <%= link_to("Add a job",new_job_path,class: 'btn btn-default')%>
</div>
<table class="table table-striped">
    <% @jobs.each do |job| %>
    <tr>
        <td><%= link_to(job.title,job_path(job)) %></td>

        <td>
            <% if current_user && current_user.admin? %>
            <%= link_to('修改',edit_job_path(job),class: "btn btn-info") %>
            <%= link_to('删除',job_path(job),method: :delete,data: {confirm: "Are you sure?"},class: "btn btn-warning") %>
            <% end %>
        </td>

        <td><%= job.created_at %></td>
    </tr>
    <% end %>
</table>
